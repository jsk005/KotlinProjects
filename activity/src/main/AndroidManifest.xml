<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.link2me.android.activitychange">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".task.Task3Activity" />
        <activity android:name=".task.Task2Activity" />
        <activity android:name=".task.Task1Activity"/>
        <activity android:name=".SubMainActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Sub2Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Sub1Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OtherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SubActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TargetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>